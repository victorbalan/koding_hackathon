extends layout

block content
	.page-header
		h3 Garage
		.button.btn.btn-primary.btn-lg(type='button', data-toggle='modal', data-target='#myModal')
			| Add new car
		#myModal.modal.fade(aria-hidden='true', aria-labelledby='myModalLabel', role='dialog', tabindex='-1')
			.modal-dialog
				.modal-content
					.modal-header
						button.close(data-dismiss='modal', type='button')
							span(aria-hidden='true') Ã—
							span.sr-only Close
						h4#myModalLabel.modal-title Modal title
					.modal-body
						.row
							.col-md-12.col-md-offset-3
								form(method='post', enctype='multipart/form-data', role="form").row.form-horizontal
									p.col-sm-offset-1 Select the car file to upload:
									div.form-group
										label(for='carName').col-sm-2.control-label Car name*
										input(type='text', name='carName')#carName.col-sm-2
									div.form-group
										label(for='carName').col-sm-2.control-label Car file*
										input(type='file', name='file')
					.modal-footer
						.row
							.col-md-12.col.md-offset-3
								input(type='submit', value='Upload file', name='submit').btn.btn-default
	h4 Select your car
	-var count = 0
	for car in cars
		-count = count + 1
		div#accordion.panel-group(role='tablist', aria-multiselectable='true')
			div.panel.panel-default
				div(id="heading#{count}").panel-heading(role='tab')
					.row
						.col-sm-10
							h4.panel-title
								a(data-toggle='collapse', data-parent='#accordion', href='#collapse#{count}', aria-expanded='true', aria-controls='collapse#{count}')
									| #{car.name}
						.col-sm-1
							i.glyphicon.glyphicon-pencil
						.col-sm-1
							i.glyphicon.glyphicon-remove
				div(id="collapse#{count}").panel-collapse.collapse.out(role='tabpanel', aria-labelledby='heading#{count}')
					div.panel-body
						| Car model
						div.clear
						p #{car.carModel}
